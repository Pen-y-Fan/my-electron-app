# EditorConfig is awesome: https://editorconfig.org
# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf

# Indentation and tabs
[*.{js,ts,jsx,tsx,css,scss,html,json}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Configuration specifically for Markdown files
[*.md]
trim_trailing_whitespace = false

# Configuration specifically for YAML files
[*.yml]
indent_style = space
indent_size = 2

# For Preload.js and core JS files in Electron
[*.js]
max_line_length = 120
